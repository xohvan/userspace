<project>
    <target name="clean">
        <delete dir="build"/>
    </target>
    <target name="build">
        <mkdir dir="build/classes"/>
        <javac srcdir="src/" destdir="build/classes"/>
    </target>
    <target name="jar">
        <mkdir dir="build/jar"/>
        <jar destfile="build/jar/userspace.jar" basedir="build/classes"/>
    </target>
</project>

